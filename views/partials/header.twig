<header class="main-site-header main-site-header--transparent main-site-header--transparent-static">
  <div class="container">
    <div class="grid grid--middle">
      <div class="grid__item large--one-third">
        <a href="/">
          {% if theme_mods.site_logo %}
            <img src="{{theme_mods.site_logo}}" class="main-site-header__logo" alt="{{site.title}} logo">  
          {% else %}
            <h1>{{site.title}}</h1>
          {% endif %}
        </a>
      </div><!--
      --><div class="grid__item large--two-thirds">
        {% include 'partials/navigation.twig' %}
      </div>
    </div>
  </div>
</header>