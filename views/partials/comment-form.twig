<div id="respond" class="push--bottom comment-form{{hideClass ? ' ' ~ hideClass: ''}} js-form-{{identifier}}">
  <h4>{{__('Add comment','ksource')}}</h4>
  {% if not is_user_logged_in %}
    <span>{{__('You must be logged in to comment','ksource')}} -&gt;</span> <a href="{{ wp_path }}/wp-login.php?redirect_to={{current_url}}">{{__('Click here','ksource')}}</a>
  {% else %}
    <form id="commentform" method="post" action="{{ wp_path }}/wp-comments-post.php">
      <div{{hideClass ? ' class="' ~ hideClass ~ '"' : ''}}>
        <span>{{__('Hello','ksource')}}, {{user.name}}</span>
        <input type="hidden" name="email" value="{{ user.email }}">
        <input type="hidden" name="author" value="{{ user.name }}">
        <input type="hidden" name="url" value="{{ user.link }}">
        <input name="comment_post_ID" value="{{ post.id }}" id="comment_post_ID" type="hidden">
        <input name="comment_parent" id="comment_parent" value="{{ comment.ID|default('0') }}" type="hidden">
      </div>
      <div>
        <label for="comment">{{__('Comment','ksource')}}</label>
        <textarea placeholder="comment text" name="comment" cols="60" rows="5" id="comment" class="form-control"></textarea>
      </div>
      <div>
        <button type="submit" name="Submit" class="button button--terciary">{{__('Send','ksource')}}</button>
        <button type="reset" class="button button--secondary">{{__('Cancel','ksource')}}</button>
        <p class="push--top"><em>{{__('* Your comment will be reviewed by the site administrator if needed','ksource')}}</em></p>
      </div>
    </form>
  {% endif %}
</div>