{% extends "layouts/base.twig" %}
{% block header %}
  {% include 'shared/main-header.twig' %}
{% endblock %}
{% block content %}
  {% if is_kili %}
      {% do action('page_blocks') %}
    {% else %}
      <section class="section section--page">
        <div class="page-header">
          <div class="container">
            <h2 class="page-header__title">{{post.title}}</h2>
          </div>
        </div>
        <div class="page-content">
          <div class="container">{{post.content}}</div>
        </div>
      </section>
    {% endif %}
{% endblock %}

